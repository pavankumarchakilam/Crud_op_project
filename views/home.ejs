                    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">-->
                </section>
                <section class="content">
                    <div class="container-fluid">
                        <h2 class="text-center display-4">Book Inventory</h2><br>
                        <div class="row">
                            <div class="col-md-8 offset-md-2">
                                <form action="simple-results.html">
                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-lg" id="myInput" onkeyup="myFunction()" placeholder="Search by titles">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <br>
                    <!-- Default box -->
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">Books Details</h3>
              
                        <div class="card-tools">
                          <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                          </button>
                          <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                            <i class="fas fa-times"></i>
                          </button>
                        </div>
                      </div>
                      <div class="card-body p-0">
                        <table class="table table-striped projects" id="myTable">
                            <thead>
                                <tr>
                                    <th style="width: 1%" class="text-center">Book_ID</th>
                                    <th style="width: 35%" class="text-center">Title</th>
                                    <th style="width: 20%" class="text-center">Author</th>
                                    <th style="width: 10%" class="text-center">Publisher</th>
                                    <th style="width: 5%" class="text-center">Quantity</th>
                                    <th style="width: 10%" class="text-center">Price</th>
                                    <th style="width: 20%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < data.length ; i++) { %>
                                    <tr>
                                        <td style="text-align: center;"><%= data[i].bookID %></td>
                                        <td style="text-align: center;"><%= data[i].title %></td>
                                        <td style="text-align: center;"><%= data[i].authors %></td>
                                        <td style="text-align: center;"><%= data[i].publisher %></td>
                                        <td class="project_progress">
                                            <div class="progress progress-sm">
                                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="47" aria-valuemin="0" aria-valuemax="100" style="width:<%= data[i].Quantity %>%">
                                                </div>
                                            </div>
                                            <small>
                                                <%= data[i].Quantity %> 
                                            </small>
                                        </td>
                                        <td style="text-align: center;"><%= data[i].Price %></td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-info btn-sm" href="/update/<%= data[i].bookID %>">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="/delete/<%= data[i]._id %>">
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>

                            </tbody>
                            </table>
                        </div>
                    </div>
                </section>  
                
